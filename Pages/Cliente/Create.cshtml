@page
@model PeluqueiaStar.Pages_Cliente.CreateModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
    //bool activar = true;
    //var identidadUsuario = UserManager.GetUserName(User);
}

<div>
    <br>
    <strong>
        <font face="Comic Sans MS,arial" style="color:indigo" size="6">Crear Nuevo Cliente</font>
    </strong>
    <br>
</div><br><br>

<hr />
<div class="container">
    <div class="row">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cliente.Nombre" class="control-label"></label>
                    <input asp-for="Cliente.Nombre" class="form-control" />
                    <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Apellidos" class="control-label"></label>
                    <input asp-for="Cliente.Apellidos" class="form-control" />
                    <span asp-validation-for="Cliente.Apellidos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Email" class="control-label"></label>
                    <input asp-for="Cliente.Email" class="form-control" />
                    <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Contrasena" class="control-label"></label>
                    <input asp-for="Cliente.Contrasena" class="form-control" />
                    <span asp-validation-for="Cliente.Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Celular" class="control-label"></label>
                    <input asp-for="Cliente.Celular" class="form-control" />
                    <span asp-validation-for="Cliente.Celular" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Cliente.EstadoSalud" /> @Html.DisplayNameFor(model =>
                        model.Cliente.EstadoSalud)
                    </label>
                </div>

            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cliente.Dirrecion" class="control-label"></label>
                    <input asp-for="Cliente.Dirrecion" class="form-control" />
                    <span asp-validation-for="Cliente.Dirrecion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Edad" class="control-label"></label>
                    <input asp-for="Cliente.Edad" class="form-control" />
                    <span asp-validation-for="Cliente.Edad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Genero" class="control-label"></label>
                    <select asp-for="Cliente.Genero" class="form-control">
                        <option value="Masculino">Masculino</option>
                        <option value="Femenio">Femenio</option>
                    </select>
                    <span asp-validation-for="Cliente.Genero" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Cliente.Membresia" /> @Html.DisplayNameFor(model =>
                        model.Cliente.Membresia)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.CantidadCitas" class="control-label"></label>
                    <input asp-for="Cliente.CantidadCitas" class="form-control" />
                    <span asp-validation-for="Cliente.CantidadCitas" class="text-danger"></span>
                </div> <br>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" /> | <a class="btn btn-success"  asp-page="MenuCliente">Lista Princicpal </a>
                </div>
            </div>
        </form>
    </div>
</div>






@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
