@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] PeluqueiaStar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PeluqueiaStar.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-info bg-info border-bottom box-shadow mb-3">
            <div class="container">
                <a class="col-3 navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/img/Logopeluqueria.png" alt="Logo" width="140px">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="col-7 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <strong> <a class="nav-link text-indigo" asp-area="" asp-page="/Index">Inicio</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-indigo" asp-area=""
                                    asp-page="/Cliente/MenuCliente">Cliente</a></strong>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-indigo"  id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Servicios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-page="/ServiciosOfrecer/ServiciosKids" >kids</a></li>
                                <li><a class="dropdown-item" asp-page="/ServiciosOfrecer/ServiciosDama">Dama</a></li>
                                <li><a class="dropdown-item" asp-page="/ServiciosOfrecer/ServiciosCaballero">Caballero</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-indigo" asp-area=""
                                    asp-page="/HorarioEstelista/MenuHorarios">Reservas</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-indigo" asp-area=""
                                    asp-page="/Estelista/MenuEstilista">Estilista</a></strong>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <strong><a class="nav-link text-indigo" asp-area=""
                                    asp-page="/Administrador/MenuAdministrador">Admin</a></strong>
                            </li>
                        }
                    </ul>
                    <div class="col-2 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer
        class="border-top footer text-muted  navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <p>&copy; 2022 - PeluqueriaStar - <a asp-area="" asp-page="/Privacy"></a></p>
            <p>Contacto cel: 321 400 24 76 </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>