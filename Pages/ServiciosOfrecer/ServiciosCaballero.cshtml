@page
@using Models
@model PeluqueiaStar.Pages_ServiciosOfrecer.IndexModel
@{
    ViewData["Title"] = "Index";
    //var dama = Models.Categoria.Dama;
    var caballero = Models.Categoria.Caballero;
    //var kids = Models.Categoria.Kids;
    //var result = 0;
    //var num = 0;


}


<div>
    <br>
    <strong>
        <font face="Comic Sans MS,arial" style="color:indigo" size="6">Listado de Servicios para Caballero</font>
    </strong>
    <br>

</div><br><br>

<div class="container">
    <div class="row">
        <div class="col-4 text-center">
            <img src="/img/peluqueria2.jpg" alt="" width="250px">
        </div>
        <div class="col-8 card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead style="text-align: center;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiciosOfrecer[0].Categoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiciosOfrecer[0].Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiciosOfrecer[0].ValorServicio)
                            </th>
                            <th type="hidden">
                                @Html.DisplayNameFor(model => model.ServiciosOfrecer[0].Comentario)
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.ServiciosOfrecer)
                        {
                            @if (item.Categoria == @caballero)
                            {
                                <tr style="text-align: center;">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categoria)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorServicio)
                                    </td>
                                    <td type="hidden">
                                        @Html.DisplayFor(modelItem => item.Comentario)
                                    </td>

                                </tr>

                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
