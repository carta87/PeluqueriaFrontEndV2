@page
@model PeluqueiaStar.Pages_Cliente.IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@{
    ViewData["Title"] = "Index";
    bool activar = false;
    var identidadUsuario = UserManager.GetUserName(User);
    foreach (var item in Model.Cliente)
    {
        if ( identidadUsuario == item.Email)
        {
            activar = true;
        }
    }
}
@if (activar)
{
    <div>
        <br>
        <strong>
            <font face="Comic Sans MS,arial" style="color:indigo" size="6"> Detalles De Perfil Cliente </font>
        </strong>
        <br>

    </div><br><br>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead style="text-align: center;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Celular)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Dirrecion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].EstadoSalud)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].Membresia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente[0].CantidadCitas)
                        </th>
                        <th><strong>Opciones</strong></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cliente)
                    {
                        @if (item.Email == @identidadUsuario)
                        {
                            <tr style="text-align: center;">
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Celular)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dirrecion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstadoSalud)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Membresia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantidadCitas)
                            </td>
                            <td>
                                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i
                                class="bi bi-pencil"></i>Editar</a>
                                <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.Id"><i
                                class="bi bi-journal-text"></i>Detalles</a>
                                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i
                                class="bi bi-trash"></i>Eliminar</a>
                            </td>
                        </tr>
                            
                        }
                        
                    }
                </tbody>
            </table>
        </div>
    </div>

}
else
{

    <div>
        <br>
        <strong>
            <font face="Comic Sans MS,arial" style="color:indigo" size="6">Bienvenido</font>
        </strong>
        <br>
    </div>
    <br><br>

    <div class="col-8 text-center" style="display:inline-block;">
        <br><br>
        <p><i> Has ingresado a la aplicacion pero estas aun paso de terminar el registro, ingresa dando
                click en el botton Continuar registro</i></p><br>
        <p>
            <a class="btn btn-primary" asp-page="Create"><i class="bi bi-journal-text"></i> Continuar con el registro </a>
        </p>
    </div>


}
