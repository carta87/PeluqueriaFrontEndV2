@page
@model PeluqueiaStar.Pages_HorarioEstelista.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Horario Estelista</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HorarioEstelista.Disponibilidad" /> @Html.DisplayNameFor(model => model.HorarioEstelista.Disponibilidad)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HorarioEstelista.Fecha" class="control-label"></label>
                <input asp-for="HorarioEstelista.Fecha" class="form-control" />
                <span asp-validation-for="HorarioEstelista.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioEstelista.Horario" class="control-label"></label>
                <input asp-for="HorarioEstelista.Horario" class="form-control" />
                <span asp-validation-for="HorarioEstelista.Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Lista Princicpal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
