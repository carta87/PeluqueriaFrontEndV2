@model PeluqueiaStar.Pages_Administrador.IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

@if(UserManager.GetUserName(User)== "elkinaguirre@gmail.com")
{
<h1>estoy con privelegisode Administrador</h1>
}



<p>
    <a class="btn btn-primary" asp-page="Create"><i class="bi bi-journal-text"></i> Crear Administrador </a>
</p>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead style="text-align: center;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Administrador[0].Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Administrador[0].Apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Administrador[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Administrador[0].Celular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Administrador[0].EstadoSalud)
                    </th>
                    <th><strong>Opciones</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Administrador)
                {
                    <tr style="text-align: center;">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Celular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstadoSalud)
                        </td>
                        <td>
                            <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i
                                class="bi bi-pencil"></i>Editar</a>
                            <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.Id"><i
                                class="bi bi-journal-text"></i>Detalles</a>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i
                                class="bi bi-trash"></i>Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
